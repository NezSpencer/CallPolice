<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    android:paddingStart="@dimen/gutter_margin"
    android:paddingEnd="@dimen/gutter_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_phone"
        android:textSize="@dimen/textSize_medium"
        android:layout_width="wrap_content"
        tools:text="09045634783"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/inter_view_margin"
        android:paddingBottom="@dimen/inter_view_margin"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSurface" />

    <ImageView
        android:id="@+id/iv_call"
        android:src="@drawable/ic_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/gutter_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>